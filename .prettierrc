{
    "singleQuote": true,
    "tabWidth": 4,
    "useTabs": false,
    "printWidth": 100,
    "bracketSameLine": false,
    "trailingComma": "es5",
    "arrowParens": "always",
    "overrides": [
        {
            "files": "*.html",
            "options": {
                "bracketSameLine": true
            }
        },
        {
            "files": ["*.css", "*.scss"],
            "options": {
                "tabWidth": 2
            }
        }
    ]
}
